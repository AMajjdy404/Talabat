
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<h1>All Roles</h1>
<hr />

<partial name="_addRolePartialView" model="new RoleFormViewModel()" />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(role => role.Id)</th>
                <th>@Html.DisplayNameFor(role => role.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>

                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-warning">
        <h3>No Records Found :( </h3>
    </div>
}

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}


